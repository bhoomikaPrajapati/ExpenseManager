<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="FontRegular">
        <item name="fontPath">fonts/Chunkfive.otf</item>
    </style>




    //Small Text Sizes

    <style name="TextRegularSizeSmall" parent="FontRegular">
        <item name="android:textSize">@dimen/small_text</item>
    </style>




    //Regular Text Sizes

    <style name="TextRegularSizeRegular" parent="FontRegular">
        <item name="android:textSize">@dimen/regular_text</item>
    </style>



    //Medium Text Sizes

    <style name="TextRegularSizeMedium" parent="FontRegular">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>




    //Large Text Sizes

    <style name="TextRegularSizeLarge" parent="FontRegular">
        <item name="android:textSize">@dimen/large_text</item>
    </style>


    <style name="ToolbarImage">
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>

    <style name="tvbtnStyle">

        <item name="android:background">@drawable/rounded_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="viewStyle">
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/yellow</item>
    </style>


</resources>
